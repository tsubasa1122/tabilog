
<%= devise_error_messages! %>
<div class="session-container">
  <h2 class="sign-in__title">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email ,:"メールアドレス" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder:"例：mail@tabilog.com"%>
    </div>

    <div class="field">
      <%= f.label :password , :"パスワード" %><br>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "例：6文字以上の半角英数" %>
    </div>


    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
